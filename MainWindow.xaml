                            <ComboBox x:Name="cbSalesAmount" HorizontalAlignment="Left" Margin="393,59,0,0" VerticalAlignment="Top" Width="59">
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="15"/>
                                <ComboBoxItem Content="20"/>
                                <ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="30"/>
                                <ComboBoxItem Content="50"/>

                            </ComboBox>
                            <TextBlock HorizontalAlignment="Left" Margin="10,62.96,0,0" TextWrapping="Wrap" Text="Выбирите наименование:" VerticalAlignment="Top"/>
