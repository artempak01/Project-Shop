<Window x:Class="Музыкальный_магазин_пластинок.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Музыкальный_магазин_пластинок"
        mc:Ignorable="d"
        Title="Управление магазином пластинок" Height="702" Width="594" Icon="картинка.png">
    <Window.Resources>
        <BitmapImage x:Key="ImageSource1" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="C:\Users\artem.pak01\source\repos\Музыкальный магазин пластинок\bin\debug\default.jpg"/>
    </Window.Resources>



    <Grid>
        <Menu x:Name="MainMenu" Height="25" VerticalAlignment="Top">
            <Menu.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
            </Menu.Background>
            <MenuItem Header="Файл">
                <MenuItem Header="Сменить пользователя" Click="LogOut" ></MenuItem>
                <MenuItem Header="Добавить пластинку" >
                </MenuItem>
                <Separator />
                <MenuItem Header="Выход" Click="Exit" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Правка" ></MenuItem>
            <MenuItem Header="О программе" ></MenuItem>
        </Menu>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="425*"/>
                <ColumnDefinition Width="197*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="125*"/>
                <RowDefinition Height="294*"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuBarColorKey}}"/>
            </Grid.Background>
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Margin="187,9,166,255" Height="30" Grid.Row="1" Grid.Column="1"/>
            <TextBox x:Name="LoginBox" VerticalAlignment="Center" Margin="115,66,56,201" Grid.Row="1" Grid.Column="1"/>
            <PasswordBox x:Name="PassworBox" VerticalAlignment="Center" KeyDown="PasswordEnter" Grid.Row="1" Grid.Column="1" Margin="115,112,56,152"/>
            <TextBlock HorizontalAlignment="Left" Margin="30,66,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="51" Grid.Row="1" Grid.Column="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="30,112,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="51" Grid.Row="1" Grid.Column="1"/>
            <Button x:Name="logonBtn" Content="Войти" Click="Logon" Grid.Row="1" Grid.Column="1" Margin="176,173,138,78" Cursor="Arrow" ClickMode="Press"/>
            <Label x:Name="statusLabl" Grid.ColumnSpan="2" Content="" HorizontalAlignment="Left" Margin="115,238,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="254" Background="Transparent" Foreground="#FFFF0034"/>
        </Grid>
        <TabControl x:Name="tabConMain" Margin="10,30,10,9">
            <TabItem x:Name="tabItCatalog" Header="Каталог">
                <Grid x:Name="CatalogGrid" Background="#FFE5E5E5" Margin="0,0,0,-12">
                    <Button x:Name="btnSearch" Content="найти" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,10,34,0" Click="Found_Singls"/>
                    <TextBox x:Name="tBoxSearch" Margin="10,10,143,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" KeyDown="Key_Enter"/>
                    <DataGrid x:Name="LiViSearhResult" Height="41" Margin="10,160,23,0" VerticalAlignment="Top"/>
                    <Grid x:Name="LogonGrid" Margin="219,76,220,76" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" VerticalAlignment="Center" Height="204" HorizontalAlignment="Center"/>
                    <Grid Width="501" Margin="30,233,29,236" Background="AliceBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="97*"/>
                            <ColumnDefinition Width="289*"/>
                            <ColumnDefinition Width="115*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.ColumnSpan="1" Source="{DynamicResource ImageSource1}"/>
                        <Grid Grid.Column="1" Margin="5" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Название"/>
                            <TextBox Text="{Binding Path=Название, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"/>
                            <TextBlock Text="Исполнитель" Grid.Row="1"/>
                            <TextBox Text="{Binding Path=Исполнители.Имя,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="1"/>
                            <TextBlock Text="Жанр" Grid.Row="2"/>
                            <TextBox Text="{Binding Path=Жанры.Название, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="2"/>
                            <TextBlock Text="Издатель" Grid.Row="3"/>
                            <TextBox Text="{Binding Path=Издатели.Название, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="3"/>
                            <TextBlock Text="Год издания" Grid.Row="4"/>
                            <TextBox Text="{Binding Path=Год_издания, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="4"/>
                            <TextBlock Text="Количество треков" Grid.Row="5"/>
                            <TextBox Text="{Binding Path=Количество_треков, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="5"/>
                            <TextBlock Text="Себестоимость" Grid.Row="6"/>
                            <TextBox Text="{Binding  Path=Себестоимость, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="6"/>
                            <TextBlock Text="Цена" Grid.Row="7"/>
                            <TextBox Text="{Binding Path=Цена, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="7"/>

                        </Grid>
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Количество" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Path=Количество, Mode=Default, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20"/>
                        </StackPanel>
                    </Grid>
                    <TextBlock x:Name="tbltest" HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbtest" HorizontalAlignment="Left" Height="23" Margin="92,37,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <ListBox x:Name="lbSearchResult" HorizontalAlignment="Left" Height="90" Margin="10,65,0,0" VerticalAlignment="Top" Width="516" SelectionChanged="ChooseSingle"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tbItmSale" Header="Продажа">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tbISales" Header="Акции" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="54">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
